{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "PostgreSQL Database Tool",
  "version": "0.1.0",
  "identifier": "com.pgdbtool.app",
  "build": {
    "beforeDevCommand": "cd frontend && bun run dev",
    "beforeBuildCommand": "cd frontend && bun run build",
    "devUrl": "http://localhost:8200",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "PostgreSQL Database Tool",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "label": "main"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": false,
    "targets": "all"
  },
  "plugins": {}
}
